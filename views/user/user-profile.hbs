<div class="profileHeader">

<div
  id="carouselExampleAutoplaying"
  class="carousel slide"
  data-bs-ride="carousel"
>
  <div class="carousel-inner profile">
    <div class="carousel-item active">
      <img src="/images/lang5.png" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/images/lang2.png" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/images/lang3.png" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/images/lang4.png" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/images/lang1.png" class="d-block w-100" alt="..." />
    </div>
  </div>

  <div class="profile-content">
    <div class="bucketlist-info-div">
      <div class="bucketlist-title-div">
        <h2 class="bucketlist">My bucketlist</h2>
        <p style="margin: 35px;">Here you can see the list of countries that you
          saved, and remove the ones you have visited!</p>
      </div>
      <ul>
        {{#each user.bucketList}}
          <li class="list-countries">
            <a class="btn-more-about" href="/countries/{{_id}}">{{countries}}

              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-airplane"
                viewBox="0 0 16 16"
              >
                <path
                  d="M6.428 1.151C6.708.591 7.213 0 8 0s1.292.592 1.572 1.151C9.861 1.73 10 2.431 10 3v3.691l5.17 2.585a1.5 1.5 0 0 1 .83 1.342V12a.5.5 0 0 1-.582.493l-5.507-.918-.375 2.253 1.318 1.318A.5.5 0 0 1 10.5 16h-5a.5.5 0 0 1-.354-.854l1.319-1.318-.376-2.253-5.507.918A.5.5 0 0 1 0 12v-1.382a1.5 1.5 0 0 1 .83-1.342L6 6.691V3c0-.568.14-1.271.428-1.849Zm.894.448C7.111 2.02 7 2.569 7 3v4a.5.5 0 0 1-.276.447l-5.448 2.724a.5.5 0 0 0-.276.447v.792l5.418-.903a.5.5 0 0 1 .575.41l.5 3a.5.5 0 0 1-.14.437L6.708 15h2.586l-.647-.646a.5.5 0 0 1-.14-.436l.5-3a.5.5 0 0 1 .576-.411L15 11.41v-.792a.5.5 0 0 0-.276-.447L9.276 7.447A.5.5 0 0 1 9 7V3c0-.432-.11-.979-.322-1.401C8.458 1.159 8.213 1 8 1c-.213 0-.458.158-.678.599Z"
                />
              </svg>
            </a>

            <form action="/favorites/{{_id}}/delete" method="post">
              <button
                class="btn btn-light rounded-pill px-3"
                type="submit"
              >Remove</button>
            </form>
          </li>
        {{/each}}
      </ul>
    </div>

    <div class="mapImg"><img src="/images/map.jpg" /></div>

  </div>
</div>